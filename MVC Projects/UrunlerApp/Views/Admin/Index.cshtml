@model List<EklemeModel>

@{
	ViewData["Title"] = "Ürün Ekle";
}

<div class="container">
	<div class="row mb-2">
		<div class="col-sm-6"><strong>Ürün Adı</strong></div>
		<div class="col-sm-2"><strong>Fiyat</strong></div>
		<div class="col-sm-2"><strong>Stok</strong></div>
	</div>
	<form class="row g-3 mb-1" method="post">
		<div class="col-sm-6">
			<input type="text" class="form-control" name="UrunAdi" required placeholder="Ürün Adı" />
		</div>
		<div class="col-sm-2">
			<input type="text" class="form-control" name="Fiyat" required placeholder="Fiyat" />
		</div>
		<div class="col-sm-2">
			<input type="text" class="form-control" name="Stok" required placeholder="Stok" />
		</div>
		<div class="col-sm-2 align-self-end">
			<button class="btn btn-primary">Ekle</button>
		</div>

		@if (ViewData["Mesaj"] != null)
		{
			<div class="alert alert-primary" role="alert">
				@ViewData["Mesaj"]
			</div>
		}
	</form>
