@model List<Urun>

<section class="bg-white py-8">
    <div class="container mx-auto flex items-center flex-wrap pt-4 pb-12">
        <nav id="store" class="w-full z-30 top-0 px-6 py-1">
            <div class="w-full container mx-auto flex flex-wrap items-center justify-between mt-0 px-2 py-3">
                <a class="uppercase tracking-wide no-underline hover:no-underline font-bold text-gray-800 text-xl " href="/urun/index">
                    Ürünler
                </a>
                <div class="flex items-center" id="store-nav-content">

                    <a class="pl-3 inline-block no-underline hover:text-black" href="/urun/index">
                        <svg class="fill-current hover:text-black" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path d="M7 11H17V13H7zM4 7H20V9H4zM10 15H14V17H10z" />
                        </svg>
                    </a>
                    <a class="pl-3 inline-block no-underline hover:text-black" href="/urun/index">
                        <svg class="fill-current hover:text-black" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path d="M10,18c1.846,0,3.543-0.635,4.897-1.688l4.396,4.396l1.414-1.414l-4.396-4.396C17.365,13.543,18,11.846,18,10 c0-4.411-3.589-8-8-8s-8,3.589-8,8S5.589,18,10,18z M10,4c3.309,0,6,2.691,6,6s-2.691,6-6,6s-6-2.691-6-6S6.691,4,10,4z" />
                        </svg>
                    </a>
                </div>
            </div>
        </nav>

        
    </div>
    <form action" /Urun/Index" method="post" style="border:solid">

    @foreach (var urunler in Model)
        {
            <div class="w-full md:w-1/3 xl:w-1/4 p-6 flex flex-col">
                <a href="#">
                    <img class="hover:grow hover:shadow-lg" src="@urunler.Img">
                    <div class="pt-3 flex items-center justify-between">
                        <p class="">@urunler.Name</p>
                    </div>
                    <p class="pt-1 text-gray-900">@urunler.Price @urunler.Currency</p>
                    <p>stok: @urunler.Stock</p>
                    <label>
                            <input type="radio" value="@urunler.Id" name="selectedProduct"/> Ürünü Seçiniz
                    </label>
                </a>
                
                    <select name="quantity" required="true">
                    <option value="" disabled selected> Adet Seçiniz</option>
                    @for (int i = 1; i <= urunler.Stock; i++)
                    {
                        <option value="@i">@i</option>
                    };
                </select>
            </div>
        }

        <h1><strong>Satış Yap</strong></h1>
       @*  <br>
        <label><input type="radio" name="inputSatis"> Nakit</label>
        <br>
        <label><input type="radio" name="inputSatis"> Kredi Kartı</label>
        <br><br> *@
        <input type="number" placeholder="Alınan Para" name="odeme" id ="odeme"></input>
        <br><br>
        <button type="submit">Ödeme Al</button>
    </form>
    <br>
    <form style="border:solid">
        <p><strong>Kazanç Raporu</strong></p>
        <p><strong>Toplam Ciro: </strong></p>
        <p><strong>Kar: </strong></p>
    </form>

</section>